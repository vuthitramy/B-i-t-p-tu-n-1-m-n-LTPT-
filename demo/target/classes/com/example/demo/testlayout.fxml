<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Thiet ke layout" BorderPane.alignment="CENTER" />
    </top>
    <left>
        <Label text="Sidebar left" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Label text="Sidebar right" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <Label text="Footer" BorderPane.alignment="CENTER" />
    </bottom>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <HBox prefHeight="20.0">
                <Label text="Left"/>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="20.0">
                <Label alignment="CENTER" text="Center"/>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="20.0">
                <Label alignment="CENTER" text="Right"/>
            </HBox>
            <HBox alignment="CENTER" prefHeight="80.0">
                <Button text="Button Center"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="40.0">
                <Label text="Input: "/>
                <TextField alignment="TOP_LEFT"/>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0">
                <VBox alignment="CENTER" prefHeight="200.0">
                    <CheckBox text="Check box 1"/>
                    <CheckBox text="Check box 2"/>
                    <CheckBox text="Check box 3"/>
                </VBox>
                <VBox alignment="CENTER" prefHeight="100.0">
                    <RadioButton text="Radio button 1"/>
                    <RadioButton text="Radio button 2"/>
                    <RadioButton text="Radio button 3"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
